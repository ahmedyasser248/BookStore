   <children>
      <TableView fx:id="books" layoutX="131.0" layoutY="66.0" prefHeight="200.0" prefWidth="338.0">
        <columns>
          <TableColumn fx:id="firstColumn" prefWidth="100.0" text="ISBN" />
          <TableColumn fx:id="secondColumn" prefWidth="111.0" text="quantity" />
            <TableColumn fx:id="thirdColumn" prefWidth="126.0" text="order date" />
        </columns>
      </TableView>
      <Button layoutX="148.0" layoutY="319.0" mnemonicParsing="false" onAction="#confirmBook" text="confirm">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button layoutX="363.0" layoutY="319.0" mnemonicParsing="false" onAction="#deleteBook" text="delete">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
